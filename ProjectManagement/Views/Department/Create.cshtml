@model ProjectManagement.Models.PHONGBAN

@{
    ViewBag.Title = "Thêm phòng ban";
}
<div class="row">
    <div class="col-md-12">
        <div class="overview-wrap">
            <h2 class="title-1">Thêm phòng ban</h2>
        </div>
    </div>
</div>
<hr />
<div class="row m-t-25">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <label class="control-label mb-1">Mã phòng ban</label>
                            @Html.EditorFor(model => model.MaPB, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MaPB, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="control-label mb-1">Tên phòng ban</label>
                            @Html.EditorFor(model => model.TenPB, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenPB, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="control-label mb-1">Trưởng phòng</label>
                            @Html.EditorFor(model => model.TrPhong, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TrPhong, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="control-label mb-1">Ngày nhận chức</label>
                            @Html.TextBoxFor(model => model.NgayNhanChuc, "{0:dd/MM/yyyy}", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NgayNhanChuc, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-actions form-group">
                            <button type="submit" value="Create" class="btn btn-secondary btn-sm"><i class="fa fa-floppy-o"></i> Lưu</button>
                        </div>

                    </div>
                }
            </div>
            <div class="card-footer">
                <a href="@Url.Action("Index","Department")">
                    <i class="fa fa-reply"></i> Trở về
                </a>
            </div>
        </div>
    </div>
</div>