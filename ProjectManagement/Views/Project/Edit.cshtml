@model ProjectManagement.Models.DUAN

@{
    ViewBag.Title = "Sửa dự án";
}

<div class="row">
    <div class="col-md-12">
        <div class="overview-wrap">
            <h2 class="title-1">Sửa dự án</h2>
        </div>
    </div>
</div>
<hr />
<div class="row m-t-25">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.MaDA)
                        <div class="form-group">
                            <label class="control-label mb-1">Mã dự án</label>
                            @Html.TextBoxFor(model => model.MaDA, new { @class = "form-control", disabled = "disabled" })
                        </div>
                        <div class="form-group">
                            <label class="control-label mb-1">Tên dự án</label>
                            @Html.EditorFor(model => model.TenDA, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenDA, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="control-label mb-1">Địa điểm</label>
                            @Html.EditorFor(model => model.DiaDiem, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DiaDiem, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="control-label mb-1">Phòng thực hiện</label>
                            @Html.DropDownList("MaPB", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaPB, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-actions form-group">
                            <button type="submit" value="Save" class="btn btn-secondary btn-sm"><i class="fa fa-floppy-o"></i> Lưu</button>
                        </div>
                    </div>
                }
            </div>
            <div class="card-footer">
                <a href="@Url.Action("Index","Project")">
                    <i class="fa fa-reply"></i> Trở về
                </a>
            </div>
        </div>
    </div>
</div>