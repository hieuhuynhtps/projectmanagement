@model IEnumerable<ProjectManagement.Models.DUAN>

@{
    ViewBag.Title = "Dự án";
}

<div class="row">
    <div class="col-md-12">
        <div class="overview-wrap">
            <h2 class="title-1">Dự án</h2>
            <a href="@Url.Action("Create","Project")">
                <button class="au-btn au-btn-icon au-btn--blue">
                    <i class='zmdi zmdi-plus'></i>Thêm
                </button>
            </a>
        </div>
    </div>
</div>
<hr />
<div class="row m-t-25">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-borderless table-striped table-earning" id="tb-project">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>
                            Tên dự án
                        </th>
                        <th>
                            Địa điểm
                        </th>
                        <th>
                            Phòng thực hiện
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="tr-shadow">
                            <td>
                                @Html.DisplayFor(modelItem => item.MaDA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenDA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DiaDiem)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PHONGBAN.TenPB)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit","Project", new { id = item.MaDA })" class="action-icon">
                                    <i class="fa fa-pencil-square-o"></i>
                                </a>
                                @*@Html.ActionLink("Details", "Details", new { id = item.MaDA }) |*@
                            </td>
                        </tr>
                    }
                </tbody>

</table>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#tb-project').DataTable();
    });
</script>